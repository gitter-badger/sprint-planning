#!/bin/bash
source $OPENSHIFT_CARTRIDGE_SDK_BASH

SBT_PATH=$OPENSHIFT_DATA_DIR/sbt
SBT_DIR=$OPENSHIFT_DATA_DIR/.sbt
IVY_DIR=$OPENSHIFT_DATA_DIR/.ivy

cd $OPENSHIFT_REPO_DIR

nohup $SBT_PATH/bin/sbt -sbt-dir $SBT_DIR -ivy $IVY_DIR "run ${OPENSHIFT_DIY_IP} ${OPENSHIFT_DIY_PORT}" > ${OPENSHIFT_DIY_LOG_DIR}server.log 2>&1 &
